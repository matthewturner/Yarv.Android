<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simulate"
        android:id="@+id/buttonSimulate" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connect"
        android:id="@+id/buttonConnect" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/disconnect"
        android:id="@+id/buttonDisconnect"
        android:visibility="gone" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutComparison"
        android:padding="5dp"
        android:layout_marginVertical="5dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPhoneUnixTime"
                android:layout_column="0"
                android:layout_weight="2" 
                android:layout_margin="5dp"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewUnixTimeDifference"
                android:src="@drawable/baseline_done_outline_24"
                android:contentDescription="@string/unixtime_difference"
                android:layout_column="1"
                android:layout_weight="1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewClockUnixTime"
                android:layout_column="2"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPhoneDate"
                android:layout_column="0"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewDateDifference"
                android:src="@drawable/baseline_done_outline_24"
                android:contentDescription="@string/date_difference"
                android:layout_column="1"
                android:layout_weight="1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewClockDate"
                android:layout_column="2"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPhoneTime"
                android:layout_column="0"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewTimeDifference"
                android:src="@drawable/baseline_done_outline_24"
                android:contentDescription="@string/time_difference"
                android:layout_column="1"
                android:layout_weight="1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewClockTime"
                android:layout_column="2"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/synchronize"
        android:id="@+id/buttonSynchronize" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rawStatus"
        android:text="@string/raw_status" 
        android:layout_margin="5dp" />
    <ListView
        android:id="@+id/listViewAvailableDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </ListView>
</LinearLayout>